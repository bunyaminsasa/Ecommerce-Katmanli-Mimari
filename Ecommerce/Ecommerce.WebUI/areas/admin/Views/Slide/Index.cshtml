@model IEnumerable<Slide>
   <!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="row" style="display: block;">

            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title" style="border-bottom:none">
                        <h2>Slayt Yönetimi</h2>
                        <a class="btn btn-primary" style="color:#fff;float:right" asp-action="New">Yeni Kayıt</a>
                    </div>
                    <div class="x_content">
                        <div class="table-responsive">
                            <img class="kResim"/>
                            <table class="table table-striped jambo_table bulk_action" onmouseout="$('.kResim').hide()">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Slogan </th>
                                        <th class="column-title">Slayt Başlığı </th>
                                        <th class="column-title">Slayt Açıklaması </th>
                                        <th class="column-title">Link</th>
                                        <th class="column-title">Fiyat</th>
                                        <th class="column-title">Sıra</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Slide s in Model)
                                    {
                                        <tr>
                                            <td class="hoverPicture" picture="@s.Picture"><a asp-action="Edit" asp-route-id="@s.ID">@s.Slogan</a></td>
                                            <td>@s.Title</td>
                                            <td>@s.Description</td>
                                            <td>@s.Link</td>
                                            <td>@s.Price.ToString("#,#0.00") TL</td>
                                            <td>@s.DisplayIndex</td>
                                            <td><button type="button" class="btn btn-danger" onclick="deleteSlideRecord(@s.ID);">Sil</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->