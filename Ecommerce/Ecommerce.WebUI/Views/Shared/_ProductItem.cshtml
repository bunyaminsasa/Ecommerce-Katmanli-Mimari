@model Product
<div class="product-item">
    <div class="pi-pic">
        @if (Model.Pictures != null && Model.Pictures.Any())
        {
<img src="@Model.Pictures.First().PicturePath" alt="@Model.Name"> }
else
{
<img src="/product/nopicture.jpg" alt="@Model.Name">}
        <div class="pi-links">
            <a asp-controller="Product" asp-action="Detail" asp-route-name="@GeneralTool.UrlConvert(Model.Name)" asp-route-id="@Model.ID" class="add-card"><i class="flaticon-bag"></i><span>ÜRÜN DETAYI</span></a>
            <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
        </div>
    </div>
    <div class="pi-text">
        <h6 style="font-size:20px;color:#016421">@Model.Price.ToString("#,#.00") TL</h6>
        <p>@Model.Name</p>
    </div>
</div>